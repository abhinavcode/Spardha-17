                <ImageView
                    android:id="@+id/call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bgcontact"
                    android:elevation="10dp"
                    android:padding="8dp"
                    android:src="@drawable/call"
                    android:tint="#fff" />
